<div class="container-fluid m-0 p-0">
  <div id="home-page" class="full-height p-4">
    <div id="logo-img">
      <img src="../assets/logo.png" class="img-fluid">
    </div>
  </div>

  <div id="about" class="p-3 p-md-5">
    <span class="header">ABOUT US</span>
    <div class="row">
      <div class="col-lg-8">
        <ul id= "general-info" class="list-group list-group-flush">
          <li class="list-group-item">
            IZY is a IT solution provider and consulting company delivering deep domain expertise, digital 
            expertise, and innovation to help enterprises leverage digital processes and excel in their business.
          </li>
          <li class="list-group-item">
            We will endeavor to continue to inspire, transform, and create synergies that shape the digital world and ensure shared prosperity for all.
          </li>
        </ul>
      </div>
      <div class="col-lg-4" style="padding-top: 35px">
        <img src="../assets/stock.jpg" style="border-radius: 15px;">
      </div>
    </div>
  </div>

  <div id="technologies" class="p-4">
    <div class="row">
      <span class="header" style="padding-bottom: 10px;">TECHNOLOGIES</span>
      <div class="col-lg-3">
        <img src="../assets/ruby.png" height="250px" class="m-2">
        <h3 class="ml-md-4 mr-md-4">
          Ruby
        </h3>
      </div>
      <div class="col-lg-3">
        <img src="../assets/react.png" height="250px" class="m-2">
        <h3 class="ml-md-4 mr-md-4">
          React
        </h3>
      </div>
      <div class="col-lg-3">
        <img src="../assets/vue.png" height="250px" class="m-2">
        <h3 class="ml-md-4 mr-md-4">
          Vue
        </h3>
      </div>
      <div class="col-lg-3">
        <img src="../assets/node.png" height="250px" class="m-2">
        <h3 class="ml-md-4 mr-md-4">
          NodeJS
        </h3>
      </div>
    </div>
  </div>

  <div id="contact" class="bg-info p-4">
    <div class="row justify-content-center mt-3 mb-3">
      <div class="col-lg-4">
        <h2>Have Any Questions?</h2>
        <p>Contact us by filling out the information below</p>
        <%= render 'layouts/messages' %>
        <%= form_with url: contacts_url, method: :post do |f| %>
          <div class="form-group text-left ">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter Your Email", required: "required" %>
            <%= f.text_area :message, rows: 5, class: "form-control mt-3", placeholder: "Enter Your Message", required: "required"%>
          </div>
          <br>
          <%= f.submit "Send Message", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>

  <div id="footer" class=" p-4">
    <footer class="text-light p-4">
      <a href="#" class="text-warning">Privacy Policy</a>
      <br>
      <small>&copy; 2022, ООО АйЗетУай</small>
    </footer>
  </div>
</div>